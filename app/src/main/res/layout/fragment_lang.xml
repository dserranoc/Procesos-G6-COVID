<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F1FF"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    tools:context=".ui.lang.LangFragment"
    >
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/circle"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_guy"
        android:scaleType="centerCrop"
        android:layout_marginTop="-25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectanglebordered"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/lang_sel"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/lang_selection_msg" />

        <Button
            android:id="@+id/spanish_lang"
            android:layout_width="238dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Español" />

        <Button
            android:id="@+id/french_lang"
            android:layout_width="238dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Français" />

        <Button
            android:id="@+id/deustch_lang"
            android:layout_width="238dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Deustch" />

        <Button
            android:id="@+id/japanese_lang"
            android:layout_width="238dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="日本人" />

        <Button
            android:id="@+id/portuguese_lang"
            android:layout_width="238dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Português" />

        <Button
            android:id="@+id/english_lang"
            android:layout_width="240dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:text="English" />

    </LinearLayout>

</RelativeLayout>
